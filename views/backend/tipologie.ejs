<% include header.ejs %>

    <body class="bg-light">

<% include navbar.ejs %>

<main role="main" class="container">
        <div class="my-3 p-3 bg-white rounded shadow-sm">
                <h6 class="border-bottom border-gray pb-2 mb-0">Tipologie Presenti</h6>
                <div class="media text-muted pt-3">

                        <table class="table table-dark">
                                <thead>
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Modifica</th>
                                    <th scope="col">Elimina</th>
                                  </tr>
                                </thead>
                                <tbody>
                            
                    <% tipologie.forEach(function(tipo){%>
                    
                               <tr>
                                    <th scope="row"><%= tipo._id %></th>
                                    <td><%= tipo.tipologia %></td>
                                    <td>
                                        <a href="/admin/tipologie/edit/<%= tipo._id %>">
                                          <i class="fas fa-edit"></i>
                                        </a>
                                      </td>
                                    <td>
                                      <a class="confirmDelete" href="/admin/tipologie/delete/<%= tipo._id %>">
                                        <i class="fas fa-trash-alt"></i>
                                      </a>
                                    </td>
                                </tr>
                    
                    
                    <% }) %>
                                 

                                </tbody>
                              </table>
                       
                </div>
        </div>
        </main>

    </body>

<% include footer.ejs %>
